<AddItem>:
    food_inp: food_inp
    quan_inp: quan_inp
    GridLayout:
        cols: 1
        pos: root.pos
        size: root.size
        GridLayout:
            cols: 2
            Label:
                text: 'Food'
            TextInput:
                id: food_inp
            Label:
                text: 'Quantity'
            TextInput:
                id: quan_inp
        Button:
            size_hint_y: None
            height: 100
            text: 'Save'
            on_press:
                root.save_and_exit()    

<DietView>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(app.context.colors['primary']['light'])
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 3
    Label:
        text: root.name
    Label:
        text: root.quantity
    Image:
        source: app.context.get_file(root.image)


<DietScreen>:
    diet_grid: diet_grid
    FloatLayout:
        Image:
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            source: app.context.get_file(app.context.files['imgs']['stars'])
        
        Button:
            text: 'Back'
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.05, 'top': 0.97}
            background_color: utils.get_color_from_hex(app.context.colors['primary']['light'])
            on_press:
                app.switch_screen(app.passengers_screen)
        
        Image:
            source: app.context.get_file(root.image)
            size_hint: 0.2, 0.2
            pos_hint: {'top': 0.9, 'right': 0.9}
        
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(app.context.colors['primary']['light'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: root.p_name
            size_hint: 0.4, 0.2
            pos_hint: {'center_x': 0.5, 'top': 0.9}
        
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(app.context.colors['primary']['primary'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 0.6, 0.1
            pos_hint: {'center_x': 0.5, 'top': 0.7}
            cols: 4

            Label:
                text: 'ID'
            Label:
                text: 'Age'
            Label:
                text: 'Height'
            Label:
                text: 'Weight'
            Label:
                text: str(root.id)
            Label:
                text: str(root.age)
            Label:
                text: str(root.height)
            Label:
                text: str(root.weight)

        Button:
            text: 'Add'
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.8, 'top': 0.7}
            on_press:
                root.add_item()

        ScrollView:
            id: scroll
            size_hint: 0.5, 0.6
            pos_hint: {'top': 0.6, 'center_x': 0.5}

            GridLayout:
                id: diet_grid
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 120
                row_force_default: True
                padding: 5, 5
                spacing: 2, 10

