#:import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        Image:
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            source: app.context.get_file(app.context.files['imgs']['homescreen_bg'])            

        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(app.context.colors['primary']['primary'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: 'Main Menu'
            pos_hint: {'top': 0.9, 'center_x': 0.5}
            size_hint: 0.3, 0.2
            font_size: 44


        GridLayout:
            size_hint: 0.4, 0.1
            pos_hint: {'center_x': 0.5, 'y': 0.15}
            cols: 2
            spacing: 50, 50

            Button:
                text: 'Passengers'
                background_color: utils.get_color_from_hex(app.context.colors['primary']['light'])

            Button:
                text: 'Food'
                background_color: utils.get_color_from_hex(app.context.colors['primary']['light'])
