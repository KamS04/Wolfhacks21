#:import utils kivy.utils

<FoodInfoScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#171717')
            Rectangle:
                size: self.size
                pos: self.pos
        
        Button:
            text: 'Back'
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.05, 'top': 0.97}
            background_color: utils.get_color_from_hex(app.context.colors['primary']['light'])
            on_press:
                app.switch_screen(app.food_screen)
        
        GridLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(app.context.colors['primary']['primary'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            size_hint: 0.8, 0.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            cols: 2
            spacing: 10, 10

            ScrollView:
                id: scroll
                size_hint: 0.9, 0.6
                pos_hint: {'y': 0.1, 'center_x': 0.5}

                GridLayout:
                    id: growth_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 120
                    row_force_default: True
                    padding: 5, 5
                    spacing: 2, 10

            ScrollView:
                id: scroll
                size_hint: 0.9, 0.6
                pos_hint: {'y': 0.1, 'center_x': 0.5}

                GridLayout:
                    id: nutrition_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 120
                    row_force_default: True
                    padding: 5, 5
                    spacing: 2, 10

            ScrollView:
                id: scroll
                size_hint: 0.9, 0.6
                pos_hint: {'y': 0.1, 'center_x': 0.5}

                GridLayout:
                    id: sustain_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 120
                    row_force_default: True
                    padding: 5, 5
                    spacing: 2, 10

            ScrollView:
                id: scroll
                size_hint: 0.9, 0.6
                pos_hint: {'y': 0.1, 'center_x': 0.5}

                GridLayout:
                    id: medicine_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 120
                    row_force_default: True
                    padding: 5, 5
                    spacing: 2, 10
    
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex(app.context.colors['primary']['light'])
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            text: 'Harvest Time: ' + root.harvest_time
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.05, 'top': 0.15}

